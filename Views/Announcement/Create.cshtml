@using Parent_Teacher_Daily_Communication_System.Models
@model AnnouncementModel

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row g-6">
    <div class="col-md-6">
        <div class="card">
        <h5 class="card-header">Create New Announcement</h5>
        <div class="card-body">

         <form method="post" enctype="multipart/form-data">
            <div>
                <label class="mt-3 form-label">Image</label>
                <input type="file" name="image">
            </div>

            <div>
                <label asp-for="Title" class="mt-3 form-label">Title</label>
                <input asp-for="Title"  type="text" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div> 

            <div>
                <label asp-for = "Description" class="mt-3 form-label">Description</label>
                <textarea asp-for = "Description"  class = "form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="demo-inline-spacing mt-5 ml-3">
             <button type="submit" class="btn btn-outline-primary">Post</button>
             <a asp-controller="Announcement" asp-action="Announcements" class="btn btn-outline-secondary">Back</a>
            </div>

        </form>

        </div>
        </div>
    </div>

    </div>
</div>