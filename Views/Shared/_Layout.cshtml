                        <div class="flex-shrink-0 me-3">
                            <div class="avatar @(curruser.Status ? "avatar-online" : "avatar-offline")" data-user-id="@curruser.Id">
                                <img src="@Url.Action("GetProfilePicture", "Account", new { curruser.UserName })" 
                                    alt="Profile Picture" 
                                    class="rounded-circle" 
                                    style="width: 40px; height: 40px; margin-right: 10px;" />
                            </div>
                        </div>


                          <div class="flex-grow-1">
                            <h6 class="mb-0">@curruser.FirstName @curruser.LastName</h6>
                           @if(await UserManager.IsInRoleAsync(curruser,"Admin")){
                            <small class="text-muted">Admin / ሀላፊ </small>
                           }
