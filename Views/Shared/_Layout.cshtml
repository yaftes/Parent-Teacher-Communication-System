            <li class="menu-item">
              <a asp-controller="Chat" asp-action="Users" class="menu-link">
                <i class="menu-icon tf-icons bx bx-comment text-primary"></i>

                <div class="text-truncate" data-i18n="Academy">Chat / መገናኛ </div>
              </a> 
            </li>



    
          </ul>
        </aside>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <nav
            class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme"
