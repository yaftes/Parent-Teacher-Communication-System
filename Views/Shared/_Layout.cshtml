                  <i class="menu-icon tf-icons bx bx-file text-primary"></i>
                  <div class="text-truncate" data-i18n="Academy">Student Report / የልጄ ዉሎ</div>
                </a> 
              </li>

            }

            <li class="menu-item">
             
              <a asp-controller="Announcement" asp-action="Announcements" class="menu-link">
               <i class="menu-icon tf-icons bx bx-bell text-primary"></i>
